<h1>Log In</h1>

<% if flash[:message] %>
<%= flash[:message]%>
<%end%>


<%=form_for :user do |f|%>
<%=f.label :username%>
<%=f.text_field :username%>

<%=f.label :password%>
<%=f.password_field :password%>

<%=f.submit "Log In"%>
<%end%>

<br> OR 
<%= link_to "Log In with Google", '/auth/google_oauth2' %>